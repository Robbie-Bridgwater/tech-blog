<div
  class="grid"
  data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 100 }'
>
  {{#each posts as |post| }}
  <div class="card grid-item" style="width: 18rem">
    <div class="card-body">
      <h5 class="card-title titles">
        <a href="/post/{{ post.id }}">{{ post.name }}</a>
      </h5>
      <p class="card-text">{{ post.description }}</p>
      <h6 class="card-subtitle mb-2 titles">
        Created by {{ post.user.name }} on {{format_date post.date_created}}
      </h6>
    </div>
  </div>
  {{/each}}
</div>