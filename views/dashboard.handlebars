<div class="row">
  <div class="col-auto">
    <h2 class="welcome-text titles">WELCOME, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 class="welcome-text titles">CREATE A NEW POST:<h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Post title:</label><br />
        <input
          class="form-input"
          type="text"
          id="post-name"
          name="post-name"
        />
      </div>

      <div class="form-group">
        <label for="post-desc">Post:</label><br />
        <textarea
          class="form-input"
          id="post-desc"
          name="post-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-secondaryColor">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3 class="titles" id="current-posts">CURRENT POSTS:</h3>
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h5>
          <a href="/post/{{ post.id }}">{{ post.name }}</a>
        </h5>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-secondaryColor" data-id="{{post.id}}">Delete</button>
        <a href="/dashboard/edit/{{post.id}}"><button class="btn btn-sm btn-secondaryColor">Edit</button></a>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>